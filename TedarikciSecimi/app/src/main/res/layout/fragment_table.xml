                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/yellow_light"
                    android:gravity="center"
                    android:layout_column="1"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Teslimat\nBaşı\nHata\nMiktarı" />

                <TextView
                    android:background="@color/yellow_light"
                    android:gravity="center"
                    android:layout_column="1"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_height="match_parent"
                    android:text="  Birim  \nFiyatı" />


                <TextView
                    android:background="@color/yellow_light"
                    android:gravity="center"
                    android:layout_column="1"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_height="match_parent"
                    android:text="  Teslimat  \nSüresi" />

                <TextView
                    android:layout_height="match_parent"
                    android:background="@color/yellow_light"
                    android:gravity="center"
                    android:layout_column="1"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Satış\nsonrası\ndestek\n performansı " />

                <TextView
                    android:background="@color/yellow_light"
                    android:gravity="center"
                    android:layout_column="1"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_height="match_parent"
                    android:text="  Tesise  \n Uzaklık " />
            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />
            <TableRow>

                <TextView
                    android:background="@color/yellow_light"
                    android:text="A"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center"/>

                <TextView
                    android:gravity="center"
                    android:text="8" />

                <TextView
                    android:gravity="center"
                    android:text="42" />

                <TextView
                    android:gravity="center"
