<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/result_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/quicksand_semibold"
            android:text="@string/result_top_text"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TableLayout
            android:id="@+id/table1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/result_top">

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow
                android:layout_width="0dp"
                android:background="@color/yellow_light"
                android:layout_height="match_parent">

                <TextView
                    android:layout_height="match_parent"
                    android:text="      \n" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="Teslimat\nBaşı\nHata\nMiktarı" />

                <TextView
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:text="  Birim  \nFiyatı" />


                <TextView
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:text="  Teslimat  \nSüresi" />

                <TextView
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="Satış\nsonrası\ndestek\n performansı " />

                <TextView
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:fontFamily="@font/quicksand_bold"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:text="  Tesise  \n Uzaklık " />
            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/quicksand_bold"
                    android:textStyle="bold"
                    android:text="Ağırlık"
                    android:textSize="13dp"/>

                <TextView
                    android:layout_gravity="center"
                    android:text="0,39647 "
                    android:textSize="12dp" />

                <TextView
                    android:layout_gravity="center"
                    android:text="0,18988 "
                    android:textSize="12dp" />

                <TextView
                    android:layout_gravity="center"
                    android:text="0,079720398 "
                    android:textSize="12dp" />

                <TextView
                    android:layout_gravity="center"
                    android:text="0,311807074 "
                    android:textSize="12dp" />

                <TextView
                    android:layout_gravity="center"
                    android:text="0,022122402"
                    android:textSize="12dp" />
            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />
        </TableLayout>

        <TextView
            android:id="@+id/result_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/quicksand_semibold"
            android:text="@string/result_bottom_text"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/result_top"
            app:layout_constraintTop_toBottomOf="@id/table1" />

        <TableLayout
            android:id="@+id/table2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/result_bottom">

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/yellow_light">

                <TextView
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/quicksand_bold"
                    android:layout_margin="3dp"
                    android:textSize="18sp"
                    android:text="TEDARİKÇİLER" />

            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

            <TableRow
                android:background="@color/green">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="D"
                    android:textSize="16sp"/>

            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />
            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="C"
                    android:textSize="16sp"/>

            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />
            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="F"
                    android:textSize="16sp"/>

            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />
            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="B"
                    android:textSize="16sp"/>

            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />
            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="E"
                    android:textSize="16sp"/>

            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />
            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="A"
                    android:textSize="16sp"/>

            </TableRow>

            <View
                android:layout_height="2dip"
                android:background="#FF909090" />

        </TableLayout>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:src="@drawable/result"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
